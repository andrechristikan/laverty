{
    "core-dir": ".",
    "language":"en",
    "environment":"local",
    "local":{
        "http-server": {
            "port": "8181",
            "address": "localhost"
        },
        "upload-files":{
            "delete-on-end":"true",
            "folder":{
                "default":"files-uploaded",
                "images":{
                    "default":"files-uploaded/defaults/general.jpg",
                    "vehicle":"vehicles",
                    "workshop":"workshops",
                    "user-customer":"users-customer",
                    "driver":"drivers",
                    "invoice":"invoices",
                    "service-detail":"service-details"
                },
                "pdf":{
                    "contract":""
                }
            }
        }
    },
    "production":{
        "http-server": {
            "port": "8181",
            "address": "0.0.0.0"
        },
        
        "upload-files":{
            "delete-on-end":"true",
            "folder":{
                "default":"files-uploaded",
                "images":{
                    "default":"files-uploaded/defaults/general.jpg",
                    "vehicle":"vehicles",
                    "workshop":"workshops",
                    "user-customer":"users-customer",
                    "driver":"drivers",
                    "invoice":"invoices",
                    "service-detail":"service-details"
                },
                "pdf":{
                    "contract":""
                }
            }
        }
    },
    "role":[
        "admin",
        "super_admin"
    ],
    "cors":{
        "allow-origin":"*",
        "header":[
            "Content-Type",
            "X-Token",
            "X-User",
            "Authorization"
        ],
        "method":[
            "GET", 
            "POST", 
            "PUT", 
            "DELETE",
            "CONNECT",
            "HEAD",
            "OPTIONS",
            "OTHER",
            "PATCH",
            "TRACE"
        ]
    },
    "response":{
        "Access-Control-Allow-Origin":"*",
        "Access-Control-Allow-Methods":"GET, POST, PUT, DELETE, HEAD, OPTIONS",
        "Access-Control-Allow-Headers":"Origin, Accept, Authorization, Content-Type, X-Token, X-User",
        "Cache-Control":"no-cache",
        "Content-Type":"application/json"
    }
}
